<%= link_to "Index", products_suppliers_path %>
<%= form_with model: @products_supplier do |form| %>
  <%= form.label :product_id, "Product"  %>
  <%= form.collection_select :product_id, options.select{ |opt| opt.table == 'product'}, :id, :name, prompt: "Select a product" %>
  <br>

  <%= form.label :supplier_id , "Supplier" %>
  <%= form.collection_select :supplier_id, options.select{ |opt| opt.table == 'suppliers'}, :id, :name, prompt: "Select a supplier" %>
  <br>
  
  <%= form.submit %>
<% end %>
