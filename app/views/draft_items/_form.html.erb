<%= link_to "Index", draft_items_path %>
<%= form_with model: @draft_item do |form| %>
  <%= form.label :draft_order_id, "Draft Order"  %>
  <%= form.collection_select :draft_order_id, options.select{ |opt| opt.table == 'draft_order'}, :id, :name, prompt: "Select a order" %>
  <br>

  <%= form.label :item_id , "Item" %>
  <%= form.collection_select :item_id, options.select{ |opt| opt.table == 'item'}, :id, :name, prompt: "Select a item" %>
  <br>
  
  <%= form.submit %>
<% end %>
